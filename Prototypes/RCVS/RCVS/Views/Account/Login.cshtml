@model RCVS.Models.LoginModel

@{
	ViewBag.Title = "Log in";
}

<div class="wysiwyg">

	<h2>Login</h2>
	@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, @class = "forms default" }))
 {
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<fieldset>
			<legend>Please provide your login details below</legend>
			<ol>
				<li>
					@Html.LabelFor(m => m.UserName)
					@Html.TextBoxFor(m => m.UserName)
					@Html.ValidationMessageFor(m => m.UserName)
				</li>
				<li>
					@Html.LabelFor(m => m.Password)
					@Html.PasswordFor(m => m.Password)
					@Html.ValidationMessageFor(m => m.Password)
				</li>
			</ol>
			<input type="submit" value="Log in" />
		</fieldset>
		<p>
			@Html.ActionLink("Register", "Register", "Account") if you don't have an account.
		</p>
 }
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
