@using RCVS.Classes
@{
	string Salutation = "Hello";
	User user = (User)System.Web.HttpContext.Current.Session["User"];
	if (Request.IsAuthenticated && user != null)
	{
		Salutation = String.Concat(Salutation, ", ", System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(user.Forenames));
	<ul>
		<li>@Salutation </li>
		<li>
			@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
	 {
				@Html.AntiForgeryToken()
				<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
	 }
		</li>
		<li><a href="@Url.Action("DeclarationOfIntention", "Home")">Initial Declaration of Intention to Sit</a></li>
		<li><a href="@Url.Action("RenewalOfDeclaration", "Home")">Renewal of Declaration</a></li>
		<li><a href="@Url.Action("SeeingPractice", "Home")">Seeing Practice</a></li>
		<li><a href="@Url.Action("ExaminationApplicationAndFee", "Home")">Examination application and examination fee payment</a></li>
	</ul>
	}
	else
	{
	<ul>
		<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
		<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
	</ul>
	}
}